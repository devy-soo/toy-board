package com.boardtest.comm.controller;

import java.util.List;

import javax.servlet.http.HttpServletRequest;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.ui.ModelMap;
import org.springframework.web.bind.annotation.ModelAttribute;
import org.springframework.web.bind.annotation.RequestMapping;

import com.boardtest.board.service.BoardService;
import com.boardtest.board.vo.BoardVo;

@Controller
public class CommController {
	
	@RequestMapping("/")
	public String index() {
		return "board";
	}
	

	@Autowired
	BoardService boardService;
	
	@RequestMapping("/board.do")
	public String boardList(ModelMap model) {
//        model.addAttribute("list", boardService.getBoardList());
		model.addAttribute("cnt", boardService.getBoardListCount());
		return "board";
	}
	
}
