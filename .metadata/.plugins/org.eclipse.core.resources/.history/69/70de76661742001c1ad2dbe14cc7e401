<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.boardtest.board.dao.BoardDao">

	
	<select id="getBoardList" resultType="com.boardtest.board.vo.BoardVo">
        SELECT BOARD_NO
        ,TITLE
        ,CONTENTS
        ,REG_DATE
        ,DEL_YN
        FROM BOARD
	</select>
	
	<select id="getBoardListCount" resultType="int">
        SELECT COUNT(1)
        FROM TOY_BOARD_DB.BOARD
	</select>
	
	
	<select id="insertBoard" resultType="com.boardtest.board.vo.BoardVo">
		INSERT INTO toy_board_db.BOARD(TITLE, CONTENTS, REG_DATE) 
		VALUES (#{title}, #{contents}, now())
	</select>
</mapper>