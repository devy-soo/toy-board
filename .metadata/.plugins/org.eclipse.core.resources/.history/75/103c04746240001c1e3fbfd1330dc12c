package com.boardtest.board.dao;

import java.util.List;

import org.apache.ibatis.session.SqlSession;
import org.slf4j.LoggerFactory;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Repository;

import com.boardtest.board.vo.BoardVo;

import ch.qos.logback.classic.Logger;

@Repository
public class boardDao {
	@Autowired
	SqlSession sqlSession; 

	public List<?> selectList(String sql,Object obj){
		return SqlSession.selectList(sql,obj);
	}
	
	
	private final Logger logger = (Logger) LoggerFactory.getLogger(this.getClass());

	public List<BoardVo> getBoardList(BoardVo boardVo){
    	List<BoardVo> list = (List<BoardVo>) selectList("com.boardtest.board.dao.boardDao", boardVo);
		return list;
	}


}
