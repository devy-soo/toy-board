package com.boardtest.board.service;

import java.util.List;

import javax.annotation.Resource;

import org.springframework.stereotype.Service;

import com.boardtest.board.mapper.BoardMapper;
import com.boardtest.board.vo.BoardVo;

@Service("com.boardtest.board.service.BoardService")
public class BoardService {
	
	@Resource(name="com.boardtest.board.mapper.BoardMapper")
	BoardMapper bM;
	
	public List<BoardVo> boardList() throws Exception{
		return bM.boardList();
	}
	
}
